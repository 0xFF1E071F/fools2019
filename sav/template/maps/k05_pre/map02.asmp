Map02_Officer:
    text "We've temporarily closed this"
    next "area for investigation."
    cont "Please come back later."
    done

Map02_GameCornerSign:
    text "Joyful Kingdom Game Corner"
    next "'Completely legit, we promise'"
    done

Map02_Yahaha:
    rel_base Map02_Yahaha
    checkevent EVENT_YAHAHA_INITIATED
    iffalse_rel .nope
    callasm_rel .npcTest
    iffalse_rel .nope
    pause 10
    disappear OBJ_1
    appear OBJ_2
    playsound $6D
    applymovement_rel OBJ_2, .spinMovement
    setlasttalked 2
    faceplayer
    playmusic MUSIC_MT_MOON_SQUARE
    opentext
    writetext_vwf Map02_YahahaText
    waitbutton
    closetext
    applymovement_rel OBJ_2, .spinMovement
    applymovement_rel OBJ_2, .escapeMovement
    disappear OBJ_2
    setevent EVENT_YAHAHA_THIRD
    loadvar wMapMusic, 0
    playmapmusic
    end
.nope
    opentext
    writetext_vwf Map02_NormalBoulderText
    waitbutton
    closetext
    end
.npcTest
    ld a, b_IsNPCAtCoord
    rst $10
    ld de, $1108
    call IsNPCAtCoord
    jr nc, .npcTestDone
    ld de, $1306
    call IsNPCAtCoord
    jr nc, .npcTestDone
    ld de, $1508
    call IsNPCAtCoord
.npcTestDone
    ld a, 0 ; one instance where this is actually useful!
    adc a
    ld [wScriptVar], a
    ret

.spinMovement
	turn_head DOWN
	turn_head LEFT
	turn_head UP
	turn_head RIGHT
	turn_head DOWN
	turn_head LEFT
	turn_head UP
	turn_head RIGHT
	turn_head DOWN
	step_end
.escapeMovement
    jump_step RIGHT
    jump_step DOWN
    jump_step DOWN
    jump_step DOWN
	step_end

Map02_NormalBoulderText:
    text "A strange boulder. It seems"
    next "to be different from the"
    cont "other ones, but you're not"
    cont "sure how..."
    done

